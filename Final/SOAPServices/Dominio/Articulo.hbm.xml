<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="SOAPServices"
                   namespace="SOAPServices.Dominio"
                   default-lazy="false">
  <class name="Articulo" table="articulo">
    <id name="Codigo" column="cod_item_articulo">
      <generator class="increment" />
    </id>
    <property name="Descripcion" column="descripcion_articulo" />
    <property name="Precio" column="precio_unitario" />
  </class>
</hibernate-mapping>